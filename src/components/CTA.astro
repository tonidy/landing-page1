---
import CTAButton from './react/CTAButton.jsx';
---
<section id="cta" class="py-24 bg-accent text-white text-center" data-aos="fade-up">
  <div class="container mx-auto px-4 max-w-2xl">
    <h2 class="text-3xl md:text-4xl font-bold mb-6 font-display">Ready to get started?</h2>
    <p class="mb-8 text-lg">Join our newsletter for updates and launch offers!</p>
    <form class="flex flex-col md:flex-row justify-center items-center gap-4">
      <input type="email" placeholder="Your email" required class="px-4 py-3 rounded-md text-primary w-full md:w-auto focus:outline-none" />
      <CTAButton client:only="react">Subscribe</CTAButton>
    </form>
  </div>
</section>
