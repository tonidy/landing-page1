<section class="relative min-h-screen flex flex-col justify-center items-center overflow-hidden">
  <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  <div class="relative z-10 text-center text-white py-24 px-4">
    <h1 data-aos="fade-up" class="text-5xl md:text-7xl font-display font-bold mb-6 tracking-tight">Welcome to <span class="text-accent">Astro</span> Landing</h1>
    <p data-aos="fade-up" data-aos-delay="200" class="text-xl md:text-2xl mb-8 font-body">A minimalist, bold, and animated landing page starter</p>
    <a href="#features" data-aos="fade-up" data-aos-delay="400" class="inline-block bg-accent text-white px-8 py-3 rounded-lg shadow-lg font-semibold text-lg transition-transform hover:scale-105">Get Started</a>
  </div>
  <video autoplay muted loop playsinline class="absolute w-full h-full object-cover z-0 opacity-80">
    <source src="/assets/hero-video.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <script type="module" is:inline>
    import AOS from 'aos';
    import 'aos/dist/aos.css';
    if (typeof window !== 'undefined') {
      window.addEventListener('DOMContentLoaded', () => {
        AOS.init({ duration: 1200, once: true });
      });
    }
  </script>
</section>
